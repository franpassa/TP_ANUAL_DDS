@using TPANUAL
@{
    ViewBag.Title = "Egresos";
    Usuario usuario = (Usuario)Session["Usuario"];
    List<OperacionDeEgreso> operacionesDeEgreso = (List<OperacionDeEgreso>)Session["Egresos"];
}
<div class="content">
    <div class="row">
        <div class="col-12">
            @foreach (OperacionDeEgreso oe in operacionesDeEgreso)
            {
                <div class="card card-chart" id=@oe.Compra.ID_Compra>
                    <div class="card-header">
                        <div class="row">
                            <div class="col">
                                <h1 class="card-title">
                                    Compra #@oe.Compra.ID_Compra
                                    <button class="btn btn-primary btn-fab btn-icon btn-round animation-on-hover" data-toggle="modal" data-target="#popup-@oe.Compra.ID_Compra" style="float:right;">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                </h1>
                            </div>
                        </div>
                    </div>
                    <div class="modal modal-black fade blur" tabindex="-1" role="dialog" id="popup-@oe.Compra.ID_Compra" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                        <div class="modal-dialog modal-lg" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h3 class="modal-title text-center">Editar compra</h3>
                                </div>
                                <div class="modal-body">
                                    <p>Este  es el form para editar la compra #@oe.Compra.ID_Compra</p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-success animation-on-hover">Guardar cambios</button>
                                    <button type="button" class="btn btn-danger animation-on-hover" data-dismiss="modal">Cerrar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body pl-3 pr-3">
                        <div class="row invertir-sm">
                            <div class="cuadros-texto col-xl-2">
                                <div class="cuadro-texto alert alert-default" role="alert">
                                    <h6>Proveedor</h6>
                                    @if (oe.Compra.Persona == null)
                                    {
                                        <p>@oe.Compra.Entidad.RazonSocial</p>
                                    }
                                    else
                                    {
                                        <p>@oe.Compra.Persona.Nombre</p>
                                    }
                                    <hr>
                                    <h6>Medio de pago</h6>
                                    <p>@oe.MedioDePago.TipoPago</p>
                                    <hr>
                                    <h6>Fecha</h6>
                                    <p>@oe.Fecha</p>
                                    <hr>
                                    <h6>Valor total</h6>
                                    <p>$@oe.ValorTotal</p>
                                    <hr>
                                    @if (oe.IngresoAsociado != null)
                                    {
                                        <div class="text-center">
                                            <a class="btn btn-success" href="~/Home/Ingresos#@oe.IngresoAsociado.ID_OperacionDeIngreso">
                                                Ingreso asociado #@oe.IngresoAsociado.ID_OperacionDeIngreso
                                            </a>
                                        </div>
                                        <hr>
                                    }
                                    <div class="cuadro-texto alert alert-info" role="alert">
                                        @using (Html.BeginForm("FormRevisor", "Egresos", FormMethod.Post))
                                        {
                                            <input name="_ID_Compra" value=@oe.Compra.ID_Compra type="hidden">
                                            <input name="_ID_Usuario" value=@usuario.ID_Usuario type="hidden">
                                            if (oe.Compra.Revisores.Any(u => u.ID_Usuario == usuario.ID_Usuario))
                                            {
                                                if (oe.Compra.Bandeja.Count == 0)
                                                {
                                                    <h6>Bandeja de mensajes vacía</h6>
                                                }
                                                else
                                                {
                                                    foreach (Mensaje msj in oe.Compra.Bandeja)
                                                    {
                                                        <h6>Mensaje #@msj.ID_Mensaje</h6>
                                                        <p>"@msj.texto"</p>
                                                        <br>
                                                    }
                                                }
                                                <button class="btn btn-danger animation-on-hover mb-0" type="submit" name="_noSerRevisor">
                                                    No ser revisor
                                                </button>
                                            }
                                            else
                                            {
                                                <h6>Bandeja de mensajes</h6>
                                                <button class="btn btn-warning animation-on-hover mb-0" type="submit" name="_serRevisor">
                                                    Ser revisor
                                                </button>
                                            }
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-10">
                                <h2>Items</h2>
                                <div class="tabla-compras">
                                    <table class="table table-striped table-hover">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Nombre</th>
                                                <th>Descripción</th>
                                                <th>Categoría, Criterio.</th>
                                                <th class="text-right">Valor</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (Item item in oe.Compra.Items)
                                            {
                                                <tr>
                                                    <td>@item.ID_Item</td>
                                                    <td>@item.Nombre</td>
                                                    <td>@item.Descripcion</td>
                                                    <td>
                                                        @if (item.Categorias != null)
                                                        {
                                                            foreach (Categoria cat in item.Categorias)
                                                            {
                                                                <p> @cat.Nombre, @cat.Criterio.Nombre. </p>
                                                            }
                                                        }
                                                        else
                                                        {
                                                            <p> Item sin categoria </p>
                                                        }
                                                    </td>
                                                    <td class="text-right"> $@item.ValorTotal</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <hr />
                        @if (oe.Compra.Presupuestos.Any())
                        {
                            <h2>Presupuestos</h2>
                            <ul class="nav nav-tabs" id="Tab-Presupuestos" role="tablist">
                                @foreach (Presupuesto presupuesto in oe.Compra.Presupuestos)
                                {
                                    string mostrar = "", seleccionado = "false";
                                    if (oe.Compra.Presupuestos.First() == presupuesto) 
                                    { 
                                        mostrar = "active"; seleccionado = "true"; 
                                    }
                                    else 
                                    { 
                                        mostrar = ""; seleccionado = "false"; 
                                    }
                                    <li class="nav-item" role="presentation">
                                        <a class="nav-link @mostrar" 
                                           id="@presupuesto.ID_Presupuesto-presupuesto-tab" 
                                           data-toggle = "tab" 
                                           href="#@presupuesto.ID_Presupuesto-presupuesto-panel"
                                           role="tab" 
                                           aria-controls="@presupuesto.ID_Presupuesto-presupuesto-panel"
                                           aria-selected="@seleccionado">
                                            Presupuesto #@presupuesto.ID_Presupuesto
                                        </a>
                                    </li>
                                }
                            </ul>
                            <div class="tab-content" id="Tab-Presupuestos-Contenido">
                                @foreach (Presupuesto presupuesto in oe.Compra.Presupuestos)
                                {
                                    string mostrar="";
                                    if (oe.Compra.Presupuestos.First() == presupuesto) 
                                    { 
                                        mostrar = "show active"; 
                                    }
                                    else 
                                    { 
                                        mostrar = "";
                                    }

                                    <div class="tab-pane fade @mostrar" 
                                         id="@presupuesto.ID_Presupuesto-presupuesto-panel" 
                                         role="tabpanel" 
                                         aria-labelledby="@presupuesto.ID_Presupuesto-presupuesto-tab">
                                        <div class="row">
                                            <div class="col-xl-2">
                                                <div class="cuadro-texto alert alert-default" role="alert" style="margin-top: 32px;">
                                                    <h6>Detalle</h6>
                                                    <p>@presupuesto.Detalle</p>
                                                    <hr>
                                                    <h6>Valor total</h6>
                                                    <p>$@presupuesto.ValorTotal</p>
                                                </div>
                                            </div>
                                            <div class="col-xl-10">
                                                <div class="tabla-compras" style="margin-top: 32px;">
                                                    <table class="table table-stripped table-hover">
                                                        <thead>
                                                            <tr>
                                                                <th>ID</th>
                                                                <th>Nombre</th>
                                                                <th>Descripción</th>
                                                                <th>Categoría, Criterio.</th>
                                                                <th class="text-right">Valor</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @foreach (Item item in presupuesto.Items)
                                                            {
                                                                <tr>
                                                                    <td>@item.ID_Item</td>
                                                                    <td>@item.Nombre</td>
                                                                    <td>@item.Descripcion</td>
                                                                    <td>
                                                                        @if (item.Categorias != null)
                                                                        {
                                                                            foreach (Categoria cat in item.Categorias)
                                                                            {
                                                                                <p> @cat.Nombre, @cat.Criterio.Nombre. </p>
                                                                            }
                                                                        }
                                                                        else
                                                                        {
                                                                            <p> Item sin categoria </p>
                                                                        }
                                                                    </td>
                                                                    <td class="text-right"> $@item.ValorTotal</td>
                                                                </tr>
                                                            }
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info text-center" role="alert">
                                <h6>Compra sin presupuestos</h6>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<a href="~/Home/NuevaCompra" class="boton-flotante btn btn-info animation-on-hover">
    <div class="mr-4">
        Registrar
        <br>
        nueva compra
    </div>
    <div class="ml-4">
        <i class="far fa-plus-square"></i>
    </div>
</a>